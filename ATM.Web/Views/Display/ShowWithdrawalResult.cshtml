<div class="title-box">{{title}}</div>
<div class="label-box"><span class="label-text">{{label.cardNumber}}:</span> {{model.cardNumber | cardNumber}}</div>
<div class="label-box"><span class="label-text">{{label.operationDate}}:</span> {{model.date | date:'dd/MM/yyyy HH:mm'}}</div>
<div class="label-box"><span class="label-text">{{label.operationAmount}}:</span> {{model.amount}}&nbsp;{{model.currency | currencyName}}</div>
<div class="label-box"><span class="label-text">{{label.balance}}:</span> {{model.balance}}&nbsp;{{model.currency | currencyName}}</div>
<div>
  <div class="btn btn-default btn-control" ng-class="{'disabled': formDisabled}" ng-click="goBack()">{{buttonTitle.back}}</div>
  &nbsp;
  <div class="btn btn-danger btn-control" ng-class="{'disabled': formDisabled}" ng-click="logOut()">{{buttonTitle.exit}}</div>
</div>